my @api_fields = qw/
    month
    code_added
    code_removed
    comments_added
    comments_removed
    blanks_added
    blanks_removed
    commits
    contributors
/;

for ( @api_fields ) {
    print 'my @', $_, '_of  :Field  :Set(_', $_, 
          ') :Get(', $_, ');', "\n";
}

for ( @api_fields ) {
    print "\t", '$self->_set_', $_, '( $dom->findvalue( "', $_, '/text()" ) );', "\n";
}
